<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/list_layout"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView
        android:id="@+id/standardOnList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Szanowni Państwo,  w związku ze zbliżającym się końcem semestru zimowego w najbliższy weekend ..."
        app:layout_constraintEnd_toEndOf="@+id/tiltedOnList"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tiltedOnList"
        app:layout_constraintTop_toBottomOf="@+id/tiltedOnList" />

    <TextView
        android:id="@+id/adressonList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="data: 2020-01-29 15:39:16"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tiltedOnList"
        app:layout_constraintTop_toBottomOf="@+id/standardOnList" />

    <TextView
        android:id="@+id/tiltedOnList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adressonList"
        android:layout_alignStart="@+id/adressonList"
        android:layout_alignEnd="@+id/adressonList"
        android:text="Wybór przedmiotów na semestr letni 2019/2020"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>